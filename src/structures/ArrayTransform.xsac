#define REDUCE( name, typ, fun, neutral)                            \
inline                                                              \
typ name( typ[*] arr_a)                                             \
{                                                                   \
  res = with {                                                      \
          ( _mul_SxV_(0,_shape_A_(arr_a)) <= iv < _shape_A_(arr_a) )\
          : _sel_VxA_(iv, arr_a);                                   \
        } : fold( fun, neutral );                                   \
                                                                    \
  return( res);                                                     \
}

#define SUM( typ, postfix, zval, oval) REDUCE( sum, typ, ScalarArith::+, zval)
#define PROD( typ, postfix, zval, oval) REDUCE( prod, typ, ScalarArith::*, oval)
#define ALL REDUCE( all, bool, ScalarArith::&, true)
#define ANY REDUCE( any, bool, ScalarArith::|, false)
#define MAXVAL( typ, postfix, zval, oval) REDUCE( maxval, typ, ScalarArith::max, min##typ())
#define MINVAL( typ, postfix, zval, oval) REDUCE( minval, typ, ScalarArith::min, max##typ())

