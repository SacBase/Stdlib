#define WHERE_AxA( typ, postfix, zval, oval)    \
inline                                          \
typ[*] where( bool[*] p, typ[*] A, typ[*] B)    \
{                                               \
  res = with {                                  \
          ( . <= iv <= . )                      \
          {                                     \
            if ( _sel_VxA_( iv, p)) {           \
              val = _sel_VxA_( iv, A);          \
            } else {                            \
              val = _sel_VxA_( iv, B);          \
            }                                   \
          } : val;                              \
        } : genarray( _shape_A_(p), zval);      \
                                                \
  return( res);                                 \
}

