#define RSUM(typ, postfix, zval, oval)                                         \
inline                                                                         \
typ[i:ishp] rsum(int o, typ[o:oshp,i:ishp] arr)                                \
{                                                                              \
    return { iv -> sum({                                                       \
                ov -> arr[ov ++ iv] | ov < oshp })                             \
           | iv < ishp };                                                      \
}

