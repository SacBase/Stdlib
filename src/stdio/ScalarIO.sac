#define FSCAN_FILE_S_(typ, format)                   \
inline bool, typ fscan##typ (File &stream)           \
{                                                    \
  typ result;                                        \
  success, result = File::fscanf(stream, QUOTE(%format));\
  return (success==1, result);                       \
}

