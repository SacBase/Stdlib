#endif /* FULLTYPES */

/* special definitions of show for char, float, double, and bool */
inline void show(char n)
{
  TermFile::printf("'%c'\n", n);
}

inline void show(float n)
{
  TermFile::printf("%g\n", tod(n));
}

inline void show(float n, int prec)
{
  TermFile::printf("%.*g\n", prec, tod(n));
}

inline void show(double n)
{
  TermFile::printf("%g\n", n);
}

inline void show(double n, int prec)
{
  TermFile::printf("%.*g\n", prec, n);
}

inline void show(bool n)
{
  TermFile::printf("%s\n", n ? "true" : "false");
}

inline void show(bool n, int mode)
{
  if (n)
  {
    if (mode==2)
    {
      TermFile::printf("true\n");
    }
    else
    {
      if (mode==1)
      {
        TermFile::printf("t\n");
      }
      else
      {
        TermFile::printf("1\n");
      }
    }
  }
  else
  {
    if (mode==2)
    {
      TermFile::printf("false\n");
    }
    else
    {
      if (mode==1)
      {
        TermFile::printf("f\n");
      }
      else
      {
        TermFile::printf("0\n");
      }
    }
  }
}

/* for print we reuse show implementation above, notice that
 * we add a header *and* a preceding space to the output of show.
 */
#define PRINT_TERMFILE_S_( typ)                      \
inline void print( typ n)                            \
{                                                    \
  TermFile::printf("Dimension:  0\n"                 \
                   "Shape    : < >\n"                \
                   " ");                             \
  show (n);                                          \
}

