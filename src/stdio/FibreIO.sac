inline void FibrePrint(File &stream, int[+] arr)
{
  FibrePrint(stream, dim(arr), shape(arr), arr);
}

inline void FibrePrint(File &stream, int arr)
{
  File::fprintf(stream, "%d\n", arr);
}


inline void FibrePrint(File &stream, float[+] arr)
{
  FibrePrint(stream, dim(arr), shape(arr), arr);
}

inline void FibrePrint(File &stream, float arr)
{
  File::fprintf(stream, "%.16f\n", tod(arr));
}


